<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/linbg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="1dp"
                android:layout_height="430dp"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/view_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/ic_oval" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="67dp"
                android:gravity="center"
                android:text="10:13" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jam"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="18 Feb 2017" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Product Name"
                android:textSize="15sp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_view"
                android:layout_below="@+id/text_view"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:text="Product Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_kota_asal_item_jadwal_kereta_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:text="Product Code"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_line_horizontal_atas"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_view_kota_asal_item_jadwal_kereta_api"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_view_durasi_item_jadwal_kereta_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Code"
                android:textAlignment="center"
                android:layout_below="@+id/view_line_horizontal_atas"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/view_circle"/>


            <View
                android:id="@+id/view_line_horizontal_bawah"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_view_durasi_item_jadwal_kereta_api"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_view_kota_tujuan_item_jadwal_kereta_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_horizontal_bawah"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:text="Barcode"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_circle_datang_item_jadwal_kereta_api"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view_line_horizontal_bawah"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_oval" />


            <View
                android:id="@+id/view_line_horizontal_atas_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_view_kota_tujuan_item_jadwal_kereta_api"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />


            <EditText
                android:id="@+id/barcodes"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:background="@drawable/bgforrmedit"
                android:layout_below="@+id/view_line_horizontal_atas_2"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"/>
            <View
                android:id="@+id/view_scan"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:background="@drawable/ic_menu_camera"
                android:layout_below="@+id/view_line_horizontal_atas_2"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/barcodes"
                android:layout_toRightOf="@+id/barcodes"/>

            <View
                android:id="@+id/view_line_horizontal_bawah_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/barcodes"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />
            <View
                android:id="@+id/view_circle_datang_item_jadwal_kereta_api_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view_line_horizontal_bawah_2"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_oval" />

            <TextView
                android:id="@+id/text_view_kota_tujuan_item_jadwal_kereta_api_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_horizontal_bawah_2"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:text="Quantity"
                android:textSize="15sp" />
            <View
                android:id="@+id/view_line_horizontal_atas_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_view_kota_tujuan_item_jadwal_kereta_api_3"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />
            <EditText
                android:id="@+id/quantity"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:background="@drawable/bgforrmedit"
                android:layout_below="@+id/view_line_horizontal_atas_3"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"/>

            <View
                android:id="@+id/view_line_horizontal_bawah_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/quantity"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"
                android:background="@android:color/darker_gray" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line_horizontal_bawah_3"
                android:background="@drawable/readbg"
                android:text="Submit"
                android:textColor="#fff"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/view_circle"
                android:layout_toRightOf="@+id/view_circle"/>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
